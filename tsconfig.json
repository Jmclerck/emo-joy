{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@styles/*": ["styles/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/api/.gitkeep"],
  "exclude": ["node_modules"]
}
